<div class="content-header">
    <h3>Yandex Price</h3>
</div>
<p>
   <button class="scalable add" onclick="getYandexPrice();"><span><span><span>Сгенерировать новый прайс</span></span></span></button>
</p>
<div id="price_yandex"></div>

<script type="text/javascript">
//<![CDATA[
    /**
     * Post form data and process response via AJAX.
     *
     * @return void
     */
        function getYandexPrice(){
            
            var url = "<?php echo $this->getUrl('*/*/generateprice') ?>";

            new Ajax.Request(url, {
                method:      'post',
                //parameters:  $(this.formId).serialize(),
                evalScripts: true,
                onComplete:  function(transport) {
                    var responseText = transport.responseText.evalJSON();
                    $('price_yandex').update('<a href="'+responseText.url+'">Скачать прайс</a>');                   
                }
            });
        }
    
</script>    
